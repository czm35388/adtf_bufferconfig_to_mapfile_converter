<?xml version='1.0' encoding='UTF-8' standalone='yes'?>
<!-- 
    root assignments:
    * root type [string]
    * x_coordinate [integer]
    * y_coordinate [integer]
 -->
<root type='oak' x_coordinate='0' y_coordinate='0'>
    <!-- 
        trunk assignments:
        * diameter of the trunk in mm [integer]
        * height of the trunk from the bottom to the top in mm [integer]
     -->
    <trunk diameter='200' height='3000'>
        <!-- 
            branch assignments:
            * diameter of the branch in mm [integer]
            * length of the branch in mm [integer]
            * height of branch from bottom to the source in mm [integer]
         -->
        <branch diameter='75' length='2250' height='1250'>
            <!-- 
                leaf tags: 
                * area in mm * mm [integer]
                * color [string]
                * position, counted from branch source to end [integer]
            -->
            <leaf>
                <position>1</position>
                <area>100</area>
                <color>light-green</color>
            </leaf>
            <leaf>
                <position>2</position>
                <area>175</area>
                <color>green</green>
            </leaf>
            <leaf>
                <position>3</position>
                <area>200</area>
                <color>light-yellow</green>
            </leaf>
        </branch>		
        <branch diameter='25' length='1000' height='1500'>
            <leaf>
                <position>1</position>
                <area>100</area>
                <color>light-green</color>
            </leaf>
            <leaf>
                <position>2</position>
                <area>175</area>
                <color>green</green>
            </leaf>
		</branch>
	</trunk>
</root>